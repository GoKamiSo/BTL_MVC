@model COMICSHOP.Areas.Admin.Data.TruyenViewModel

@{
    ViewBag.Title = "EditTruyen";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="my-4">EditTruyen</h2>

@using (Html.BeginForm("EditTruyen", "QLTruyen", FormMethod.Post, new { enctype = "multipart/form-data", id = "EditTr" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>TruyenViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.MaTruyen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaTruyen, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenTruyen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTruyen, new { htmlAttributes = new { @class = "form-control", id = "TenTruyen" } })
                <span id="TenTruyenError" class="text-danger" style="display: none;"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="fileUpload" value="File" id="fileUpload" />
                <span id="HinhAnhError" class="text-danger" style="display: none;"></span>
                <img id="imgPreview" src="@Url.Content("~/Images/" + Model.HinhAnh)" alt="your image" style="display:block; margin-top:10px; max-width:100px;" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TacGia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TacGia, new { htmlAttributes = new { @class = "form-control", id = "TacGia" } })
                <span id="TacGiaError" class="text-danger" style="display: none;"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayXuatBan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NgayXuatBan, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                <span id="NgayXuatBanError" class="text-danger" style="display: none;"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", id = "SoLuong" } })
                <span id="SoLuongError" class="text-danger" style="display: none;"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Gia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control", type = "number", id = "Gia" } })
                <span id="GiaError" class="text-danger" style="display: none;"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TomTat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.TomTat, new { @class = "form-control", id = "TomTat" })
                <span id="TomTatError" class="text-danger" style="display: none;"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaTL, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MaTL, (SelectList)ViewBag.MaTLParam, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaTL, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="mb-3">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}

<div id="message"></div>

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    <script type="text/javascript">
        document.getElementById('fileUpload').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imgPreview').setAttribute('src', e.target.result);
                    document.getElementById('imgPreview').style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}
