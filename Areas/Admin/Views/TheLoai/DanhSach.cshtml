@model IEnumerable<COMICSHOP.Models.TheLoai>

@{
    ViewBag.Title = "DanhSach";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@if (Session["Fullname"] == null)
{
    <script>
    window.location.href = '@Url.Action("Login", "QLAccount")';
    </script>
}
<p class="mt-4 ">
    @Html.ActionLink("Thêm thể loại", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>
<div class="table-responsive container w-75">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th class="w-50">@Html.DisplayNameFor(model => model.TenTL)</th>
                <th class="w-25">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenTL)</td>
                    <td>
                        @Html.ActionLink("Edit", "EditTheLoai", new { id = item.MaTL }, new { @class = "btn btn-warning btn-sm me-1" })
                        @Html.ActionLink("Delete", "DeleteTheLoai", new { id = item.MaTL }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
