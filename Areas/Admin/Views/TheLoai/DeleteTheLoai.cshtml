@model COMICSHOP.Areas.Admin.Data.TheLoaiVM

@{
    ViewBag.Title = "Delete TheLoai";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .delete-confirmation {
        background-color: #d1ecf1; /* Light blue background */
        border: 1px solid #bee5eb; /* Blue border */
        border-radius: .25rem;
        padding: 1.5rem;
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
    }

        .delete-confirmation dt {
            font-weight: bold;
        }

        .delete-confirmation dd {
            margin-bottom: .5rem;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>

<h3>Are you sure you want to delete this?</h3>
<div class="delete-confirmation">
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.MaTL)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MaTL)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.TenTL)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TenTL)
        </dd>
    </dl>

    @using (Html.BeginForm("ConfirmDeleteTheLoai", "TheLoai", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MaTL)
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index", "TheLoai")" class="btn btn-secondary">Back to List</a>
        </div>
    }
</div>
